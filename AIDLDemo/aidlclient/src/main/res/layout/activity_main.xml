<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBindUnbindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind/Unbind service" />

    <TextView
        android:id="@+id/tvServiceState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Service bound: false" />

    <Button
        android:id="@+id/btnAddAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Add an album" />

    <Button
        android:id="@+id/btnGetAlbums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get albums" />

    <TextView
        android:id="@+id/tvAlbums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Albums" />

</LinearLayout>