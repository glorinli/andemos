<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/btnCheckSD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check SDCard" />

    <Button
        android:id="@+id/btnGetSDPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get SDCard Path" />

    <Button
        android:id="@+id/btnSelectSDCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select SD card" />

    <Button
        android:id="@+id/btnDownloadFileToSDCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download file to SDCard" />

</LinearLayout>